<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" alignment="TOP_CENTER" styleClass="auth-container" stylesheets="@../css/style.css"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.studyshare.client.controller.RegisterController">

    <VBox styleClass="header">
        <Label text="Veres Library" styleClass="header-label"/>
    </VBox>

    <VBox styleClass="login-form" maxWidth="400">
        <Label text="Create Account" styleClass="form-title"/>
        <TextField fx:id="usernameField" promptText="Username" styleClass="input-field"/>
        <TextField fx:id="emailField" promptText="Email" styleClass="input-field"/>
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="input-field"/>
        <Label fx:id="errorLabel" styleClass="error-label"/>
        <Button text="Register" onAction="#handleRegister" styleClass="primary-button"/>
        <Hyperlink text="Back to Login" onAction="#handleBackToLogin" styleClass="link-button"/>
    </VBox>

    <VBox styleClass="footer">
        <Label text="Â© 2024 Copyright: Veres Group"/>
    </VBox>
</VBox>